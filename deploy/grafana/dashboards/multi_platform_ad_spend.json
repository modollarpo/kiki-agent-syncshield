# Grafana Dashboard Configuration for Multi-Platform Ad Spend Monitoring
# Version: 2026.02.07
# Import this JSON into Grafana to create the dashboard

{
  "dashboard": {
    "title": "KIKI Agentâ„¢ - Multi-Platform Ad Spend",
    "tags": ["kiki", "ad-spend", "multi-platform", "revenue"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Ad Spend by Platform (Last 24h)",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by (platform) (kiki_ad_spend_total)",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Platform Coverage Status",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "count(count by (platform) (kiki_ad_spend_total))",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "center",
          "text": {
            "titleSize": 16,
            "valueSize": 48
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 2, "color": "yellow" },
                { "value": 4, "color": "green" },
                { "value": 6, "color": "blue" }
              ]
            },
            "mappings": [
              {
                "type": "range",
                "options": {
                  "from": 0,
                  "to": 6,
                  "result": {
                    "text": "${__value} / 6 Platforms"
                  }
                }
              }
            ]
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "API Fetch Success Rate",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(kiki_ad_spend_fetch_total[5m])) / (sum(rate(kiki_ad_spend_fetch_total[5m])) + sum(rate(kiki_ad_spend_fetch_errors_total[5m]))) * 100",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Total Net Profit Uplift (All Platforms)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 4 },
        "targets": [
          {
            "expr": "sum(kiki_net_profit_uplift)",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "center",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 0, "color": "yellow" },
                { "value": 10000, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Ad Spend Trend by Platform (7 Days)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "sum by (platform) (rate(kiki_ad_spend_total[1h]))",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max", "last"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "gradientMode": "opacity",
              "axisPlacement": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "meta" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#1877F2", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "google" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#4285F4", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "tiktok" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#000000", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "linkedin" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#0077B5", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "amazon" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#FF9900", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "microsoft" },
              "properties": [{ "id": "color", "value": { "fixedColor": "#00A4EF", "mode": "fixed" } }]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "API Error Rate by Platform",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "sum by (platform) (rate(kiki_ad_spend_fetch_errors_total[5m])) * 100",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 100
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Net Profit by Platform (Last 30 Days)",
        "type": "bargauge",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "sum by (platform) (increase(kiki_net_profit_uplift[30d]))",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 0, "color": "yellow" },
                { "value": 5000, "color": "green" },
                { "value": 20000, "color": "blue" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Platform API Latency (P95)",
        "type": "table",
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (platform, le) (rate(kiki_ad_spend_fetch_duration_seconds_bucket[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "platform": 0,
                "Value": 1
              },
              "renameByName": {
                "platform": "Platform",
                "Value": "P95 Latency (seconds)"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "P95 Latency (seconds)",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Platform" },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-text"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "KIKI Success Fee by Platform (Current Month)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 28, "w": 24, "h": 4 },
        "targets": [
          {
            "expr": "sum by (platform) (increase(kiki_success_fee_total[30d]))",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "justifyMode": "center",
          "textMode": "value_and_name",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "semi-dark-blue" },
                { "value": 1000, "color": "semi-dark-green" },
                { "value": 5000, "color": "dark-green" }
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "platform",
          "type": "query",
          "label": "Platform",
          "query": "label_values(kiki_ad_spend_total, platform)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "store_id",
          "type": "query",
          "label": "Store ID",
          "query": "label_values(kiki_ad_spend_total, store_id)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(kiki_deployment_timestamp[5m]) > 0",
          "iconColor": "blue"
        }
      ]
    }
  },
  "folderId": 0,
  "overwrite": true
}
